<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RMR_projekt.KonecPage"
             Title="KonecPage">
    
    <ContentPage.BackgroundImageSource>
        <FileImageSource File="pink.jpg" />
    </ContentPage.BackgroundImageSource>
    
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
        <Label x:Name="congrats" Text="Congratulations!" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource PrimaryTextColor}" />

        <Label x:Name="timeLabel" FontSize="18" HorizontalOptions="Center" TextColor="{StaticResource SecondaryTextColor}" />

        <Label x:Name="caloriesLabel" FontSize="18" HorizontalOptions="Center" TextColor="{StaticResource SecondaryTextColor}" />

        <Button x:Name="konecBtn" Text="Continue" BackgroundColor="{StaticResource PrimaryColor}" TextColor="White" WidthRequest="200" HorizontalOptions="Center" Clicked="continueButtonClicked"/>
    </StackLayout>
</ContentPage>